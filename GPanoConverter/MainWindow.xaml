<Window x:Class="GPanoConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Google Pano converter" Height="130" Width="420">
    <Grid Margin="0,0,0,0">
        <Button x:Name="bConvert" Content="Convert" HorizontalAlignment="Left" Margin="322,64,0,0" Width="75" VerticalAlignment="Top" Click="bConvert_Click" TabIndex="3"/>
        <Button x:Name="bOpenPhoto" Content="Open photo" HorizontalAlignment="Left" Margin="322,10,0,0" VerticalAlignment="Top" Width="75" Click="bOpenPhoto_Click" TabIndex="1"/>
        <TextBox x:Name="tbPhotoPath" HorizontalAlignment="Left" Height="20" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="300" IsTabStop="False" MaxLines="1"/>
        <CheckBox x:Name="cbReplace" Content="Remove source file" HorizontalAlignment="Left" Margin="10,52,0,0" VerticalAlignment="Top" TabIndex="2"/>
        <TextBlock x:Name="tbWarning" HorizontalAlignment="Left" Margin="10,36,0,0" TextWrapping="Wrap" Text="Note: for better quality the proportion of source photo should be 2:1" VerticalAlignment="Top" RenderTransformOrigin="0.456,1.128" FontSize="9" Visibility="Hidden"/>

    </Grid>
</Window>
